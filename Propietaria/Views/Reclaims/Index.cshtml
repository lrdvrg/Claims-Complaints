@model IEnumerable<Propietaria.Models.Reclaim>
    @{ Propietaria.Models.Users user = (Propietaria.Models.Users)Session["User"]; }
@{ Propietaria.Models.ReclaimsAndComplaints2Entities db = new Propietaria.Models.ReclaimsAndComplaints2Entities(); }

@{
    ViewBag.Title = "Index";
}

<h2>Reclamos</h2>
@if (@user != null)
{
    if (user.IdRole == (from e in db.Role where e.Description == "Empleado" select e.IdRole).First())
    {
        <p>
            @Html.ActionLink("Agregar", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Fecha de Creación
        </th>
        <th>
            Reclamo
        </th>
        <th>
            Departamento de Origen
        </th>
        <th>
            Departamento Responsable
        </th>
        <th>
            Producto
        </th>
        <th>
            Tipo de Reclamo
        </th>
        <th>
            Comentario
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Users.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreationDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Department.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department1.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReclaimType.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReclaimsAndComplaintsStatus.description)
    </td>
    @if (@user != null)
    {
        if (user.IdRole == (from e in db.Role where e.Description == "Empleado" select e.IdRole).First())
        {
<td>
    @Html.ActionLink("Editar", "Edit", new { id = item.IdReclaim }) |
    @Html.ActionLink("Ver", "Details", new { id = item.IdReclaim }) |
    @Html.ActionLink("Responder", "Edit", "ReclaimsResponses", new { id = item.IdReclaim }, null) |
    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdReclaim })
</td>
        }
    }
        </tr>
    }

</table>
