            @Html.DropDownList("IdReclaimType", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdReclaimType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdOriginDepartment, "Departamento de Origen", htmlAttributes: new { @class = "control-label col-md-2" })
