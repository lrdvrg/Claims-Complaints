@model IEnumerable<Propietaria.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           RD$ @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdProduct }) |
            @Html.ActionLink("Ver", "Details", new { id=item.IdProduct }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdProduct })
        </td>
    </tr>
}

</table>
